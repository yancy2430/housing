  padding-top: 4vw;
  padding-left: 2vw;
}
.right-item{
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #fff;
  white-space: pre-wrap;
  height: 19vw;
  padding-top: 6vw;

}
.money {
