<!--pages/me/me.wxml-->
<view class="container">
	<view class="head">
		<van-row>
			<van-col>
				<block wx:if="{{login}}">
					<van-image custom-class="avater" round fit="cover" src="https://weixin.tdeado.com/static/images/avatar.jpg" />
				</block>
				<block wx:else>
					<van-image custom-class="avater" round fit="cover" src="https://weixin.tdeado.com/static/images/avatar.jpg" />
				</block>
			</van-col>
			<van-col>
				<view class="name">
					<block wx:if="{{login}}">
						<text class="van-cell-text textButton name">{{phone}}</text>
					</block>
					<block wx:if="{{!login}}">
						<text class="van-cell-text textButton name" bindtap="toLogin">注册/登录</text>
					</block>

				</view>
			</van-col>

		</van-row>
	</view>
	<view class="tops">
		<van-row>
			<van-col span="8">
				<view class="topitem" bindtap="toCoupons">
				<van-icon size="20px" name="http://weixin.tdeado.com/static/house/1.png" />

					<view class="toptext">优惠券</view>
				</view>
			</van-col>
			<van-col span="8">
				<view class="topitem" bindtap="toFocus">

				<van-icon size="20px" name="http://weixin.tdeado.com/static/house/3.png" />
					<view class="toptext">关注</view>
				</view>
			</van-col>
			<van-col span="8">
				<view class="topitem" bindtap="toHistory">
				<van-icon size="20px" name="http://weixin.tdeado.com/static/house/2.png" />
					<view class="toptext">足迹</view>
				</view>
			</van-col>
		</van-row>
	</view>
	<block wx:if="{{!staff}}">
		<view class="interval"></view>
		<van-cell-group>

			<van-cell custom-class="coll-item" size="large" wx:if="{{login}}" link-type="navigateTo" url="/pages/message/message" icon="service-o" border="{{true}}" value="咨询最新政策" is-link>

				<view slot="title">
					<button class="van-cell-text textButton">在线咨询 <van-tag wx:if="{{ms>0}}" type="danger" round>{{ms}}</van-tag></button>
					
				</view>
			</van-cell>
			<van-cell custom-class="coll-item" size="large" wx:if="{{!login}}" bindtap="toLogin" icon="service-o" border="{{true}}" value="咨询最新政策" is-link>
				<view slot="title">
					<button class="van-cell-text textButton">在线咨询 </button>
					
				</view>
			</van-cell>


			<van-cell custom-class="coll-item" size="large" icon="phone-o" border="{{true}}" value="{{countData.contact}}" is-link>
				<view slot="title">
					<button class="van-cell-text textButton">咨询电话 </button>
				</view>
			</van-cell>
			<van-cell custom-class="coll-item" size="large" icon="flower-o" border="{{true}}" is-link>
				<view slot="title">
					<button class="van-cell-text textButton" open-type="feedback">意见反馈 </button>
				</view>
			</van-cell>
			<!-- <van-cell custom-class="coll-item" size="large" icon="replay" border="{{false}}" is-link>
				<view slot="title">
					<button class="van-cell-text textButton" bindtap="clearCache">退出登录</button>
				</view>
			</van-cell> -->
		</van-cell-group>
	</block>
	<block wx:if="{{staff}}">
		<view class="interval"></view>
		<van-grid column-num="4">
			<van-grid-item square link-type="navigateTo" use-slot url="/pages/message/list">
				<van-icon name="chat-o" color="#2ABD67" size="35px" info="{{ms>0?ms:''}}" />

				<button class="btn">消息中心</button>
			</van-grid-item>
			<van-grid-item square link-type="navigateTo" use-slot url="/pages/sharelog/sharelog">
				<van-icon name="upgrade" color="#2ABD67" size="35px" />
				<button class="btn">分享记录</button>
			</van-grid-item>
			<van-grid-item square link-type="navigateTo" use-slot url="/pages/customer/history">
				<van-icon name="browsing-history-o" color="#2ABD67" size="35px" />
				<button class="btn">文章浏览</button>
			</van-grid-item>
			<van-grid-item square link-type="navigateTo" use-slot url="/pages/customer/houseHistory">
				<van-icon name="browsing-history-o" color="#2ABD67" size="35px" />
				<button class="btn">楼盘浏览</button>
			</van-grid-item>
			<van-grid-item square link-type="navigateTo" use-slot url="/pages/customer/customer">
				<van-icon name="friends-o" color="#2ABD67" size="35px" />
				<button class="btn">名下客户</button>
			</van-grid-item>
			<van-grid-item square link-type="navigateTo" use-slot url="/pages/records/records">
				<van-icon name="records" color="#2ABD67" size="35px" />
				<button class="btn">报备记录</button>
			</van-grid-item>
			<van-grid-item square link-type="navigateTo" use-slot url="/pages/qrcode/qrcode">
				<van-icon name="cluster-o" color="#2ABD67" size="35px" />
				<button class="btn">我的二维码</button>
			</van-grid-item>
			<!-- <van-grid-item square bindtap="clearCache" use-slot>
				<van-icon name="replay" color="#2ABD67" size="35px" />
				<button class="btn">退出登录</button>
			</van-grid-item> -->
		</van-grid>
	</block>
	<view class="interval"></view>
	<official-account style=""></official-account>
</view>
<van-dialog use-slot confirm-button-color="#2ABD67" confirm-button-text="授权" show="{{ show }}" show-cancel-button bind:confirm="onConfirm" confirm-button-open-type="getPhoneNumber" bind:getphonenumber="getPhonenumber" bind:close="onClose">
	<view style="padding: 1vw;background-color: #2ABD67;">
		<van-button icon="https://weixin.tdeado.com/static/house/wxlogo.png" color="#2ABD67" custom-style="padding: 1vw;" custom-class="showbutton" block type="info">微信授权登录</van-button>
	</view>
</van-dialog>