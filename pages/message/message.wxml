<!--pages/message/message.wxml-->
<view class="wp">
	<view class="message" wx:for="{{messages}}" wx:key="index" >
		<image class="avater" src="{{item.sender == userId ? '':('http://127.0.0.1'+item.avatar)}}"></image>
		<view class="content">
			{{item.content}}
		</view>
		<view class="avater"  wx:if="{{item.sender == userId}}">
					<open-data type="userAvatarUrl"></open-data>
		</view>
		<block wx:else><image class="avater" src=""></image></block>

	</view>
	

	<view class="editor van-hairline--top" style="bottom:{{bottom}}px">
		<van-icon class="icon-l" name="phone-circle-o" size="30px" />
		<input value="{{inputValue}}" class="weui-input" auto-focus adjust-position="{{false}}" bindfocus="foucus" bindblur="blur" placeholder="" bindconfirm="onConfirm" confirm-type="send" />
		<van-icon class="icon-r" name="add-o" size="30px" />
	</view>
	<!-- <view class="time">2020-03-20 11:21:31</view> -->

</view>